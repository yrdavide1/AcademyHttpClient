<Window x:Class="AcademyHttpClientGUI.SubWindows.DeleteStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademyHttpClientGUI.SubWindows"
        mc:Ignorable="d"
        Title="DeleteStudent" Height="200" Width="400">
    <Grid>
        <TextBox x:Name="ID" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="96"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="281,117,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.495,0.484" Height="26" Width="54" Click="Delete">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock HorizontalAlignment="Center" Margin="0,44,0,0" TextWrapping="Wrap" Text="Enter the ID of the student to delete" FontSize="14" VerticalAlignment="Top"/>

    </Grid>
</Window>
