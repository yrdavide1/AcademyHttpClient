<Window x:Class="AcademyHttpClientGUI.Courses.CoursesMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademyHttpClientGUI.Courses"
        mc:Ignorable="d"
        Title="CoursesMainWindow" Height="200" Width="300">
    <Grid>
        <ComboBox x:Name="CoursesActions" SelectionChanged="ActionChanged" HorizontalAlignment="Center" Margin="0,76,0,0" VerticalAlignment="Top" Width="170">
            <ComboBoxItem x:Name="Default" IsSelected="True">ACTIONS</ComboBoxItem>
            <ComboBoxItem Tag="Display">Display active courses</ComboBoxItem>
            <ComboBoxItem Tag="Create">Create new course</ComboBoxItem>
            <ComboBoxItem Tag="Delete">Delete a course</ComboBoxItem>
            <ComboBoxItem Tag="Modify">Modify course properties</ComboBoxItem>
        </ComboBox>
        <TextBlock FontSize="15" HorizontalAlignment="Center" Margin="0,42,0,0" Text="Choose action to perform" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>

    </Grid>
</Window>
